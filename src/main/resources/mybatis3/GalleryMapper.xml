<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gallery">
    <insert id="insertGallery" statementType="PREPARED"
            parameterType="qkfns.spring.mvc.vo.GalleryVO">
        insert into Gallery (title, userid, contents, fnames, fsizes, uuid)
        values (#{title},#{userid},#{contents},#{fnames},#{fsizes},#{uuid});

    </insert>

    <select id="selectList" statementType="PREPARED"
            resultType="qkfns.spring.mvc.vo.GalleryVO">
        select gno, title, userid, regdate, thumbs, views, fnames
        from Gallery
        order by gno desc limit #{snum}, 24;

    </select>

    <select id="countGallery" statementType="PREPARED"
            resultType="int">
        select count(gno) cnt from Gallery;
    </select>
    <select id="selectOne" statementType="PREPARED"
            parameterType="String"
            resultType="qkfns.spring.mvc.vo.GalleryVO">
        select *
        from Gallery
        where gno = #{gno};
    </select>

    <select id="lastGalleryID" statementType="PREPARED"
            resultType="int">
        select auto_increment-1 gno from information_schema.TABLES
        where TABLE_NAME = 'Gallery'
    </select>

</mapper>